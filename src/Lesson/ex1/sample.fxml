<BorderPane fx:controller="ex1.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open"/>
                <MenuItem text="Save"/>
                <MenuItem text="Close" onAction="#clickCloseBtn"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <Slider fx:id="slider" min="0" max="100" showTickMarks="true" showTickLabels="true"
                onMouseReleased="#changeSlider"/>
    </center>

    <bottom>
        <HBox>
            <Button fx:id="btn1" text="btn1"/>
            <Button text="btn2"/>
            <Button text="btn3"/>
            <Button text="btn4"/>
            <Label fx:id="label" text="0.0"/>
        </HBox>

    </bottom>

    <right>

    </right>
    <left>

    </left>

</BorderPane>