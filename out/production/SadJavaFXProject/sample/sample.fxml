<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="BOTTOM_LEFT" hgap="10" vgap="10">
  <Button text="Кнопка1" GridPane.rowIndex="0" GridPane.columnIndex="0"
  onAction="#clickBtn1"
  />

  <Button text="Отправить" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#clickSend"/>
  <TextArea fx:id="textArea" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="200"/>
  <TextField fx:id="textField" promptText="input message" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>